<h2>Customise your profile></h2>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
  <%= f.email_field :email %></div><br />

  <div><%= f.label "Business Interests" %>
  <%= f.email_field :interest_1 %></div><br />

  <div><%= f.label "Business Interests" %>
  <%= f.email_field :interest_2 %></div><br />


  <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
  <%= f.password_field :password, :autocomplete => "off" %></div><br />

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div><br />

  <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
  <%= f.password_field :current_password %></div><br />

  <div><%= f.submit "Update" %></div>
<% end %>




<%= link_to "Back", :back %><br />

<%= simple_form_for(@user, :url => registration_path(:user), :html => { :multipart => true, :class => 'form-horizontal'}) do |f| %>
 <%= f.error_notification %>
<div class = 'form-inputs'>
	
	<%= f.file_field :user_image%>
	<%= f.input :description, :label => "One-line description", :required => false %>
	<%= f.input :email %>
	<%= f.input :password, :label => "Change password", :required => false %>
	<%= f.input :password_confirmation, :label => "Confirm new password", :required => false %>
	<%= f.input :interest_1, :label => "Business interests", :required => false %>
	<%= f.input :interest_2, :label => " ", :required => false %>
	<%= f.input :hobby_1, :label => 'Personal interests', :required => false%>
	<%= f.input :hobby_2, :label => " ", :required => false%>
	<%= f.input :current_password, :label => 'Existing password' %>
</div>
	<%= f.submit "Update" %>
<% end %>
