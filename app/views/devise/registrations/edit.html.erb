<h2>Customise your profile</h2>

<%= simple_form_for(@user, :url => registration_path(:user), :html => { :multipart => true, :class => 'form-horizontal'}) do |f| %>
 <%= f.error_notification %>
<div class = 'form-inputs'>
	
	<%= f.file_field :user_image, :label => "Change your photo" %>
	<%= f.input :description, :label => "One-line description", :required => false %>
	<%= f.input :email %>
	<%= f.input :password, :label => "Change password", :required => false %>
	<%= f.input :password_confirmation, :label => "Confirm new password", :required => false %>
	<%= f.input :interest_1, :label => "Business interests", :required => false %>
	<%= f.input :interest_2, :label => " ", :required => false %>
	<%= f.input :hobby_1, :label => 'Personal interests', :required => false%>
	<%= f.input :hobby_2, :label => " ", :required => false%>
	<%= f.input :current_password, :label => 'Existing password' %>
</div>
	<%= f.submit "Update" %>
<% end %>
