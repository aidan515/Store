<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
	<%= f.input :first_name %>
	<%= f.input :surname%>
    <%= f.input :email, :required => true, :autofocus => true %>
	<%= f.input :description %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
	<%= f.input :birthday, :label => "Date of Birth", :as => :date, :start_day => Date.today.day, :start_month => Date.today.month, :start_year => Date.today.year, :order => [:day, :month, :year] %> 
	<%= f.input :interest_1, :label => "Business interests" %>
	<%= f.input :interest_2, :label => "Business interests" %>
	<%= f.input :hobby_1, :label => "Personal interests" %>
	<%= f.input :hobby_2, :label => "Personal interests" %>
	<%= f.file_field :user_image %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>